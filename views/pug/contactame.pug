doctype html
html(lang="en")

  head
    meta(charset="UTF-8")
    title Contactame
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/css/contactame.css")

  body

    .container.contact-container
      h1.contact-title Contacta conmigo, humano
      .col-md-6.offset-md-3.contact-form
        form(action="/contacto", method="POST")
          .mb-3
            input(type="text", class="form-control", id="nombre", name="nombre", placeholder="Nombre", required)
          .mb-3
            input(type="email", class="form-control", id="email", name="email", placeholder="Correo Electr√≥nico", required)
          .mb-3
            textarea(class="form-control", id="mensaje", name="mensaje", rows="4", placeholder="Mensaje", required)
          button(type="submit", class="btn btn-custom") Enviar Mensaje
